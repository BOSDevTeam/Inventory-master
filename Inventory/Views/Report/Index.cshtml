        else localStorage.setItem('SaleAmountSummary', 'False');

        if ('@ViewBag.IsAllowSaleItemSimple' == 'True') localStorage.setItem('SaleItemSimple', 'True');
        else localStorage.setItem('SaleItemSimple', 'False');

        if ('@ViewBag.IsAllowSaleItem' == 'True') localStorage.setItem('SaleItem', 'True');
        else localStorage.setItem('SaleItem', 'False');

        if ('@ViewBag.IsAllowSaleAudit' == 'True') localStorage.setItem('SaleAudit', 'True');
        else localStorage.setItem('SaleAudit', 'False');

        if ('@ViewBag.IsAllowSaleAmountByCustomer' == 'True') localStorage.setItem('SaleAmountByCustomer', 'True');
        else localStorage.setItem('SaleAmountByCustomer', 'False');

        if ('@ViewBag.IsAllowSaleAmountBySalePerson' == 'True') localStorage.setItem('SaleAmountBySalePerson', 'True');
        else localStorage.setItem('SaleAmountBySalePerson', 'False');

        if ('@ViewBag.IsAllowSaleItemByCustomer' == 'True') localStorage.setItem('SaleItemByCustomer', 'True');
        else localStorage.setItem('SaleItemByCustomer', 'False');

        if ('@ViewBag.IsAllowTopSaleItem' == 'True') localStorage.setItem('TopSaleItem', 'True');
        else localStorage.setItem('TopSaleItem', 'False');

        if ('@ViewBag.IsAllowBottomSaleItem' == 'True') localStorage.setItem('BottomSaleItem', 'True');
        else localStorage.setItem('BottomSaleItem', 'False');

        if ('@ViewBag.IsAllowSaleItemProfit' == 'True') localStorage.setItem('SaleItemProfit', 'True');
        else localStorage.setItem('SaleItemProfit', 'False');

        if ('@ViewBag.IsAllowSaleLog' == 'True') localStorage.setItem('SaleLog', 'True');
        else localStorage.setItem('SaleLog', 'False');

        if ('@ViewBag.IsAllowPurchaseAmountOnly' == 'True') localStorage.setItem('PurchaseAmountOnly', 'True');
        else localStorage.setItem('PurchaseAmountOnly', 'False');

        if ('@ViewBag.IsAllowPurchaseItemSimple' == 'True') localStorage.setItem('PurchaseItemSimple', 'True');
