        if ('@ViewBag.IsAllowPurchaseAmountBySupplier' == 'True') localStorage.setItem('PurchaseAmountBySupplier', 'True');
        else localStorage.setItem('PurchaseAmountBySupplier', 'False');

        if ('@ViewBag.IsAllowPurchaseItemBySupplier' == 'True') localStorage.setItem('PurchaseItemBySupplier', 'True');
        else localStorage.setItem('PurchaseItemBySupplier', 'False');

        if ('@ViewBag.IsAllowPurchaseLog' == 'True') localStorage.setItem('PurchaseLog', 'True');
        else localStorage.setItem('PurchaseLog', 'False');

        if ('@ViewBag.IsAllowAdjustmentVoucher' == 'True') localStorage.setItem('AdjustmentVoucher', 'True');
        else localStorage.setItem('AdjustmentVoucher', 'False');

        if ('@ViewBag.IsAllowAdjustmentItem' == 'True') localStorage.setItem('AdjustmentItem', 'True');
        else localStorage.setItem('AdjustmentItem', 'False');

        if ('@ViewBag.IsAllowTransferVoucher' == 'True') localStorage.setItem('TransferVoucher', 'True');
        else localStorage.setItem('TransferVoucher', 'False');

        if ('@ViewBag.IsAllowTransferItem' == 'True') localStorage.setItem('TransferItem', 'True');
        else localStorage.setItem('TransferItem', 'False');

        if ('@ViewBag.IsAllowStockStatusDetail' == 'True') localStorage.setItem('StockStatusDetail', 'True');
        else localStorage.setItem('StockStatusDetail', 'False');
    }

</script>


