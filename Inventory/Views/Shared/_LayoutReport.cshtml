    <script>
        var userId = 0, userName, isMultiUnit = false, isMultiCurrency = false, isBankPayment = false, isTechnician = 0;

        userId = localStorage.getItem("UserID");
        userName = localStorage.getItem("UserName");
        isMultiUnit = localStorage.getItem("IsMultiUnit");
        isMultiCurrency = localStorage.getItem("IsMultiCurrency");
        isBankPayment = localStorage.getItem("IsBankPayment");
        isTechnician = localStorage.getItem("IsTechnician");

        $("#loginUser").text(userName);

        if (isTechnician == 0) hideModule();

        $(function () {
            $('#subMenuSaleAmountOnlyRp').click(function () {
                window.location.href = '@Url.Action("Filter", "Report",new { reportName = Resource.SaleAmountOnlyReport })';
            });
            $('#subMenuSaleAmountSummaryRp').click(function () {
                window.location.href = '@Url.Action("Filter", "Report",new { reportName = Resource.SaleAmountSummaryReport })';
            });
            $('#subMenuSaleItemSimpleRp').click(function () {
                window.location.href = '@Url.Action("Filter", "Report",new { reportName = Resource.SaleItemSimpleReport })';
            });
            $('#subMenuSaleItemRp').click(function () {
                window.location.href = '@Url.Action("Filter", "Report", new { reportName = Resource.SaleItemReport} )';
            });
            $('#subMenuSaleAuditRp').click(function () {
                window.location.href = '@Url.Action("Filter","Report",new { reportName = Resource.SaleAuditReport})';
            });
            $('#subMenuSaleAmountByCustomerRp').click(function () {
                window.location.href = '@Url.Action("Filter", "Report",new { reportName = Resource.SaleAmountByCustomerReport})';
            });
            $('#subMenuSaleAmountBySalePersonRp').click(function () {
                window.location.href = '@Url.Action("Filter","Report",new { reportName = Resource.SaleAmountBySalePersonReport})';
            });
            $('#subMenuSaleItemByCustomerRp').click(function () {
                window.location.href = '@Url.Action("Filter", "Report",new { reportName = Resource.SaleItemByCustomerReport})';
            });
            $('#subMenuSaleItemByStaffRp').click(function () {
                window.location.href = '@Url.Action("Filter", "Report",new { reportName = Resource.SaleItemByStaffReport})';
            });
            $('#subMenuTopSaleItemRp').click(function () {
                window.location.href = '@Url.Action("Filter", "Report",new { reportName = Resource.TopSaleItemReport})';
            });
            $('#subMenuBottomSaleItemRp').click(function () {
                window.location.href = '@Url.Action("Filter", "Report",new { reportName = Resource.BottomSaleItemReport})';
            });
            $('#subMenuPurchaseAmountOnlyRp').click(function () {
                window.location.href = '@Url.Action("Filter", "Report",new { reportName = Resource.PurchaseAmountOnlyReport })';
            });
            $('#subMenuPurchaseItemSimpleRp').click(function () {
                window.location.href = '@Url.Action("Filter", "Report",new { reportName = Resource.PurchaseItemSimpleReport})';
            });
            $('#subMenuPurchaseAuditRp').click(function () {
                window.location.href = '@Url.Action("Filter", "Report", new { reportName = Resource.PurchaseAuditReport})';
            });
            $('#subMenuPurchaseAmountBySupplierRp').click(function () {
                window.location.href = '@Url.Action("Filter", "Report", new { reportName = Resource.PurchaseAmountBySupplierReport})';
            });
            $('#subMenuPurchaseItemBySupplierRp').click(function () {
                window.location.href = '@Url.Action("Filter", "Report", new { reportName = Resource.PurchaseItemBySupplierReport})';
            });
            $('#subMenuAdjustmentVoucherRp').click(function () {
                window.location.href = '@Url.Action("Filter", "Report", new { reportName = Resource.AdjustmentVoucherReport })';
            });
            $('#subMenuAdjustmentItemRp').click(function () {
                window.location.href = '@Url.Action("Filter", "Report", new { reportName = Resource.AdjustmentItemReport } )';
            });
            $('#subMenuTransferVoucherRp').click(function () {
                window.location.href = '@Url.Action("Filter", "Report", new { reportName = Resource.TransferVoucherReport })';
            });
            $('#subMenuTransferItemRp').click(function () {
                window.location.href = '@Url.Action("Filter", "Report", new { reportName = Resource.TransferItemReport})';
            });
            $('#subMenuSaleItemProfitRp').click(function () {
                window.location.href = '@Url.Action("Filter", "Report",new { reportName = Resource.SaleItemProfitReport })';
            });
            $('#subMenuSaleLogRp').click(function () {
                window.location.href = '@Url.Action("Filter", "Report",new { reportName = Resource.SaleLogReport })';
            });
            $('#subMenuPurchaseLogRp').click(function () {
                window.location.href = '@Url.Action("Filter", "Report",new { reportName = Resource.PurchaseLogReport })';
            });
            $('#subMenuStockStatusDetailRp').click(function () {
                window.location.href = '@Url.Action("Filter", "Report",new { reportName = Resource.StockStatusDetailReport })';
            });
            $('.toast').toast({
                delay: 3000
            });
            $('#linkBackHome').click(function () {
                if (isTechnician == 1) window.location.href = '@Url.Action("Dashboard", "Home")';
                else window.location.href = '@Url.Action("Index", "Entry")?userId=' + userId + '&isTechnician=' + isTechnician;
            });
        });

        function showToast(type,message){
            $('.toast').toast('show');
            if (type == 1) {
                $('#lblToastHeader').text("Success");
                $('.toast-header').removeClass("toast-error");
                $('.toast-header').addClass("toast-success");
            } else if (type == 0) {
                $('#lblToastHeader').text("Alert");
                $('.toast-header').removeClass("toast-success");
                $('.toast-header').addClass("toast-error");
            }
            $('#lblToastMessage').text(message);
        }

        function separatedComma(value) {
            let iVal = parseInt(value);
            let result = iVal.toLocaleString('en-US');
            return result;
        }

        function getTodayDate() {
            let date = new Date();
            let day = ("0" + date.getDate()).slice(-2);
            let month = ("0" + (date.getMonth() + 1)).slice(-2);
            let today = date.getFullYear() + "-" + (month) + "-" + (day);
            return today;
        }

        function hideModule() {
            let isShowSaleAmountOnly = localStorage.getItem("SaleAmountOnly");
            let isShowSaleAmountSummary = localStorage.getItem("SaleAmountSummary");
            let isShowSaleItemSimple = localStorage.getItem("SaleItemSimple");
            let isShowSaleItem = localStorage.getItem("SaleItem");
            let isShowSaleAudit = localStorage.getItem("SaleAudit");
            let isShowSaleAmountByCustomer = localStorage.getItem("SaleAmountByCustomer");
            let isShowSaleAmountBySalePerson = localStorage.getItem("SaleAmountBySalePerson");
            let isShowSaleItemByCustomer = localStorage.getItem("SaleItemByCustomer");
            let isShowSaleItemByStaff = localStorage.getItem("SaleItemByStaff");
            let isShowTopSaleItem = localStorage.getItem("TopSaleItem");
            let isShowBottomSaleItem = localStorage.getItem("BottomSaleItem");
            let isShowSaleItemProfit = localStorage.getItem("SaleItemProfit");
            let isShowSaleLog = localStorage.getItem("SaleLog");
            let isShowPurchaseAmountOnly = localStorage.getItem("PurchaseAmountOnly");
            let isShowPurchaseItemSimple = localStorage.getItem("PurchaseItemSimple");
            let isShowPurchaseAudit = localStorage.getItem("PurchaseAudit");
            let isShowPurchaseAmountBySupplier = localStorage.getItem("PurchaseAmountBySupplier");
            let isShowPurchaseItemBySupplier = localStorage.getItem("PurchaseItemBySupplier");
            let isShowPurchaseLog = localStorage.getItem("PurchaseLog");
            let isShowAdjustmentVoucher = localStorage.getItem("AdjustmentVoucher");
            let isShowAdjustmentItem = localStorage.getItem("AdjustmentItem");
            let isShowTransferVoucher = localStorage.getItem("TransferVoucher");
            let isShowTransferItem = localStorage.getItem("TransferItem");
            let isShowStockStatusDetail = localStorage.getItem("StockStatusDetail");

            if (isShowSaleAmountOnly != 'True') $("#subMenuSaleAmountOnlyRp").css('display', 'none');
            if (isShowSaleAmountSummary != 'True') $("#subMenuSaleAmountSummaryRp").css('display', 'none');
            if (isShowSaleItemSimple != 'True') $("#subMenuSaleItemSimpleRp").css('display', 'none');
            if (isShowSaleItem != 'True') $("#subMenuSaleItemRp").css('display', 'none');
            if (isShowSaleAudit != 'True') $("#subMenuSaleAuditRp").css('display', 'none');
            if (isShowSaleAmountByCustomer != 'True') $("#subMenuSaleAmountByCustomerRp").css('display', 'none');
            if (isShowSaleAmountBySalePerson != 'True') $("#subMenuSaleAmountBySalePersonRp").css('display', 'none');
            if (isShowSaleItemByCustomer != 'True') $("#subMenuSaleItemByCustomerRp").css('display', 'none');
            if (isShowSaleItemByStaff != 'True') $("#subMenuSaleItemByStaffRp").css('display', 'none');
            if (isShowTopSaleItem != 'True') $("#subMenuTopSaleItemRp").css('display', 'none');
            if (isShowBottomSaleItem != 'True') $("#subMenuBottomSaleItemRp").css('display', 'none');
            if (isShowSaleItemProfit != 'True') $("#subMenuSaleItemProfitRp").css('display', 'none');
            if (isShowSaleLog != 'True') $("#subMenuSaleLogRp").css('display', 'none');
            if (isShowPurchaseAmountOnly != 'True') $("#subMenuPurchaseAmountOnlyRp").css('display', 'none');
            if (isShowPurchaseItemSimple != 'True') $("#subMenuPurchaseItemSimpleRp").css('display', 'none');
            if (isShowPurchaseAudit != 'True') $("#subMenuPurchaseAuditRp").css('display', 'none');
            if (isShowPurchaseAmountBySupplier != 'True') $("#subMenuPurchaseAmountBySupplierRp").css('display', 'none');
            if (isShowPurchaseItemBySupplier != 'True') $("#subMenuPurchaseItemBySupplierRp").css('display', 'none');
            if (isShowPurchaseLog != 'True') $("#subMenuPurchaseLogRp").css('display', 'none');
            if (isShowAdjustmentVoucher != 'True') $("#subMenuAdjustmentVoucherRp").css('display', 'none');
            if (isShowAdjustmentItem != 'True') $("#subMenuAdjustmentItemRp").css('display', 'none');
            if (isShowTransferVoucher != 'True') $("#subMenuTransferVoucherRp").css('display', 'none');
            if (isShowTransferItem != 'True') $("#subMenuTransferItemRp").css('display', 'none');
            if (isShowStockStatusDetail != 'True') {
                $("#subMenuStockStatusDetailRp").css('display', 'none');
                $("#menuStockStatus").css('display', 'none');
            }

            // show hide group menu
            if (isShowSaleAmountOnly == 'False' && isShowSaleAmountSummary == 'False' && isShowSaleItemSimple == 'False' && isShowSaleItem == 'False' && 
                isShowSaleAudit == 'False' && isShowSaleAmountByCustomer == 'False' && isShowSaleAmountBySalePerson == 'False' && isShowSaleItemByCustomer == 'False' &&
                isShowTopSaleItem == 'False' && isShowBottomSaleItem == 'False' && isShowSaleItemProfit == 'False' && isShowSaleLog == 'False' && isShowSaleItemByStaff == 'False') {
                $("#menuSale").css('display', 'none');
            }
            if (isShowPurchaseAmountOnly == 'False' && isShowPurchaseItemSimple == 'False' && isShowPurchaseAudit == 'False' && isShowPurchaseAmountBySupplier == 'False' &&
                isShowPurchaseItemBySupplier == 'False' && isShowPurchaseLog == 'False' ) {
                $("#menuPurchase").css('display', 'none');
            }
            if (isShowAdjustmentVoucher == 'False' && isShowAdjustmentItem == 'False') {
                $("#menuAdjustment").css('display', 'none');
            }
            if (isShowTransferVoucher == 'False' && isShowTransferItem == 'False') {
                $("#menuTransfer").css('display', 'none');
            }
        }

    </script>
