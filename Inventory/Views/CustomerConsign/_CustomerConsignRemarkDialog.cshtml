
<div class="modal fade" id="modalRemark" tabindex="-1" role="dialog" aria-labelledby="adminModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalRemarkTitle">Add Remark</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4 col-lg-4">
                        <label>Due Date</label>
                    </div>
                    <div class="col-md-8 col-lg-8">
                        <input type="date" id="dDueDate" class="form-control form-input" />
                    </div>
                </div>
                <div class="row m-t-10">
                    <div class="col-lg-4 col-md-4">
                        <label id="lblRemark" class="control-label mb-0">Remark</label>
                    </div>
                    <div class="col-md-8 col-lg-8">
                        <textarea id="txtRemarkNote" class="form-control control-input"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    
                    
                </div>

            </div>
            <div class="modal-footer">
                <button id="btnRemarkCancel" class="btn btn-white-outline-third" data-dismiss="modal" aria-label="Close">@Resource.Close</button>
                <button id="btnRemarkOk" class="btn btn-first">@Resource.Submit</button>
                <button id="btnEditRemarkOk" class="btn btn-first">@Resource.Submit</button>
            </div>
        </div>
    </div>
</div>


