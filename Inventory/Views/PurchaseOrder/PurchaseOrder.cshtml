                        $('#inputDate').val(getTodayDate());
                        $('#inputVoucherID').val("");
                        $("#ddlSupplier").val(defaultSupplierId);
                        $("#ddlLocation").val(defaultLocationId);
                        clearProductControl();
                        $('#tblTranPurchaseOrder').find("tbody").empty();
                        clearAmount();
                    }
                },
                failure: function (response) {
                    hideLoadingIcon();
                    alert(response.responseText);
                },
                error: function (response) {
                    hideLoadingIcon();
                    alert(response.responseText);
                },
            });
        });

        $('#btnEditPayment').click(function () {
