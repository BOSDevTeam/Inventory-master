@using Inventory.ViewModels;
@model RpStockStatusByModuleViewModel
@{
    Layout = "~/Views/Shared/_LayoutReportDetail.cshtml";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/assets/css/style.css">
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/assets/js/jquery-3.2.1.min.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            setReportTitle('@Resource.StockStatusDetailReport');
            setDefaultFilter('@Model.FromDate.ToShortDateString()', '@Model.ToDate.ToShortDateString()', '');
        });

    </script>
</head>

<div>

    <div class="row table-header" style="padding:10px 15px;">
        <div class="col-md-1 col-lg-1">@Resource.Code</div>
        <div class="col-md-3 col-lg-3">@Resource.ProductName</div>
        <div class="col-md-1 col-lg-1 aligh-right">@Resource.OpeningStock</div>
        <div class="col-md-1 col-lg-1 aligh-right">@Resource.Sale</div>
        <div class="col-md-1 col-lg-1 aligh-right">@Resource.Purchase</div>
        <div class="col-md-1 col-lg-1 aligh-right">@Resource.SaleReturn</div>
        <div class="col-md-1 col-lg-1 aligh-right">@Resource.PurchaseReturn</div>
        <div class="col-md-1 col-lg-1 aligh-right">@Resource.AdjustmentIncrease</div>
        <div class="col-md-1 col-lg-1 aligh-right">@Resource.AdjustmentDecrease</div>
        <div class="col-md-1 col-lg-1 aligh-right">@Resource.Balance</div>
    </div>

    @foreach (var item in Model.lstDetail as List<RpStockStatusByModuleViewModel.DetailView>)
    {
        <div class="row rpt-item" style="padding:0 15px;">
            <div class="col-md-1 col-lg-1">@item.Code</div>
            <div class="col-md-3 col-lg-3">@item.ProductName</div>
            <div class="col-md-1 col-lg-1 aligh-right">@item.OpeningStock</div>
            <div class="col-md-1 col-lg-1 aligh-right">@item.Sale</div>
            <div class="col-md-1 col-lg-1 aligh-right">@item.Purchase</div>
            <div class="col-md-1 col-lg-1 aligh-right">@item.SaleReturn</div>
            <div class="col-md-1 col-lg-1 aligh-right">@item.PurchaseReturn</div>
            <div class="col-md-1 col-lg-1 aligh-right">@item.AdjustmentIncrease</div>
            <div class="col-md-1 col-lg-1 aligh-right">@item.AdjustmentDecrease</div>
            <div class="col-md-1 col-lg-1 aligh-right">@item.Balance</div>
        </div>
    }

</div>


