@{
    Layout = "~/Views/Shared/_LayoutReport.cshtml";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/assets/css/style.css">
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/assets/js/jquery-3.2.1.min.js"></script>

    <style type="text/css">
        #subMenuSaleRpGp {
            display: block;
        }
    </style>
    <script type="text/javascript">
        document.getElementById('subMenuSaleItemRp').className = 'active';
    </script>
</head>
<div>
    <div class="row setup-title-layout">
        <div class="col-md-6 col-lg-6">
            <label class="page-title">@Resource.SaleItemReport</label>
        </div>
        <div class="col-md-6 col-lg-6">
            <button id="btnViewReport" class="btn btn-second" style="float:right">@Resource.ViewReport</button>
        </div>
    </div>
   
    @{
        Html.RenderPartial("_DateFilter");
    }
            
    <div class="row setup-title-layout m-t-10">
        <div class="col-md-1 col-lg-1">
            <input type="radio" id="rdoAll" name="rdoPayType" value="ALL" /><label for="rdoAll" style="padding-left:5px;">@Resource.All</label>
        </div>
        <div class="col-md-1 col-lg-1">
            <input type="radio" id="rdoCash" name="rdoPayType" value="Cash" /><label for="rdoCash" style="padding-left:5px;">@Resource.Cash</label>
        </div>
        <div class="col-md-1 col-lg-1">
            <input type="radio" id="rdoCredit" name="rdoPayType" value="Credit" /><label for="rdoCredit" style="padding-left:5px;">@Resource.Credit</label>
        </div>
    </div>

</div>

<script type="text/javascript">
    $(function () {
        $('#btnViewReport').click(function () {
            let isAll = false, isCash = false, isCredit = false;
            let fromDate = $('#inputFromDate').val();
            let toDate = $('#inputToDate').val();
            if (document.getElementById('rdoAll').checked == true) {
                isAll = true;
            }
            if(document.getElementById('rdoCash').checked == true){ isCash=true;}
            if (document.getElementById('rdoCredit').checked == true) { isCredit = true;}           
            window.location.href = '@Url.Action("SaleItemReport", "RpSaleItem")?fromDate=' + fromDate+'&toDate='+toDate+'&isAll='+isAll+'&isCash='+isCash+'&isCredit='+isCredit;
        });
    })
    $(document).ready(function () {        
        initializeControl();

        function initializeControl() {
            $('#inputFromDate').val(getTodayDate());
            $('#inputToDate').val(getTodayDate());
            document.getElementById('rdoAll').checked = true;
        }       
    })
</script>

